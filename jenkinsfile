pipeline {
    agent any

    tools{
         maven 'Maven'
    }
    environment {
         DOCKERHUB_CREDENTIALS=credentials('DockerHubCred')
        DOCKERHUB_USERNAME='samayochita'
        GITHUB_REPO_URL = 'https://github.com/samayochita/SPE.git'
        DOCKER_IMAGE_NAME = 'SPE'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }
         stage ("Build via Maven") {
                steps {
                    sh 'mvn clean install'
                }
        }

         stage ("Run tests") {
                steps {
                    sh 'mvn test'
                }
         }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                    //sh 'docker build -t SPE .'
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script{
                    docker.withRegistry('', 'DockerHubCred') {
                    sh 'docker tag SPE samayochita/SPE'
                    sh 'docker push samayochita/SPE'
                    }
                 }
            }
        }

   stage('Run Ansible Playbook') {
            steps {
                script {

                   // Use the correct path to ansible-playbook
                   sh "/opt/homebrew/bin/ansible-playbook -i inventory deploy.yml"

                }
            }
        }


    }

}
